using System;

class Program
{
    static void Main()
    {
        int[] array = { 4, 7, 11, 3, 18, 22, 7 };
        int largest = int.MinValue;
        int secondLargest = int.MinValue;

        foreach (int num in array)
        {
            if (num > largest)
            {
                secondLargest = largest;
                largest = num;
            }
            else if (num > secondLargest && num < largest)
            {
                secondLargest = num;
            }
        }

        if (secondLargest != int.MinValue)
        {
            Console.WriteLine("Другий найбільший елемент: " + secondLargest);
        }
        else
        {
            Console.WriteLine("Другого найбільшого елемента немає.");
        }
    }
}



using System;

class Program
{
    static void Main()
    {
        int[,] array =
        {
            { 5, 9, 3 },
            { 1, 7, 4 },
            { 6, 2, 8 }
        };

        int rows = array.GetLength(0);
        int cols = array.GetLength(1);
        int[] flatArray = new int[rows * cols];
        int index = 0;

        for (int i = 0; i < rows; i++)
        {
            for (int j = 0; j < cols; j++)
            {
                flatArray[index++] = array[i, j];
            }
        }

        Array.Sort(flatArray);

        index = 0;
        for (int i = 0; i < rows; i++)
        {
            for (int j = 0; j < cols; j++)
            {
                array[i, j] = flatArray[index++];
            }
        }

        Console.WriteLine("Відсортований двовимірний масив:");
        for (int i = 0; i < rows; i++)
        {
            for (int j = 0; j < cols; j++)
            {
                Console.Write(array[i, j] + "\t");
            }
            Console.WriteLine();
        }
    }
}



using System;

class Program
{
    static void Main()
    {
        int[] array = { 10, 20, 30, 40, 50 };
        Console.Write("Введіть індекс елемента для видалення (від 0 до 4): ");
        int index = int.Parse(Console.ReadLine());

        if (index < 0 || index >= array.Length)
        {
            Console.WriteLine("Некоректний індекс.");
            return;
        }

        int[] newArray = new int[array.Length - 1];
        for (int i = 0, j = 0; i < array.Length; i++)
        {
            if (i != index)
            {
                newArray[j++] = array[i];
            }
        }

        Console.WriteLine("Масив після видалення елемента:");
        foreach (int num in newArray)
        {
            Console.Write(num + " ");
        }
    }
}



using System;

class Program
{
    static void Main()
    {
        int[,] array =
        {
            { 2, 6, 5 },
            { 1, 9, 7 },
            { 3, 4, 8 }
        };

        Console.WriteLine("Виберіть діагональ для обчислення суми:");
        Console.WriteLine("1 - Головна діагональ");
        Console.WriteLine("2 - Побічна діагональ");
        Console.Write("Ваш вибір (1 або 2): ");
        int choice = int.Parse(Console.ReadLine());

        int sum = 0;
        int rows = array.GetLength(0);

        if (choice == 1)
        {
            for (int i = 0; i < rows; i++)
            {
                sum += array[i, i]; //головна діагональ (0,0), (1,1), (2,2)
            }
            Console.WriteLine("Сума елементів по головній діагоналі: " + sum);
        }
        else if (choice == 2)
        {
            for (int i = 0; i < rows; i++)
            {
                sum += array[i, rows - 1 - i]; //побічна діагональ (0,2), (1,1), (2,0)
            }
            Console.WriteLine("Сума елементів по побічній діагоналі: " + sum);
        }
        else
        {
            Console.WriteLine("Невірний вибір!");
        }
    }
}
